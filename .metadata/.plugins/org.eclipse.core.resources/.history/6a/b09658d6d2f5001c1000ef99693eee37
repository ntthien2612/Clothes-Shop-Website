@Repository
public class DonHangDao extends BaseDao{

	public List<DonHang> DanhSachDonHang() {
		List<DonHang> list = new ArrayList<DonHang>();
		String sql = "select * from donhang";
		list = _jdbcTemplate.query(sql, new MapperDonHang());
		return list;
	}

